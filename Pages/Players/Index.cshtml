@page
@model PlayerWebApp.Pages.Players.IndexModel
@{
}

<h2>Player List</h2>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Username</th>
			<th>e-mail</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Players.Count != 0)
		{
			@foreach (var player in Model.Players)
			{
				<tr>
					<td>@player.Id</td>
					<td>@player.Username</td>
					<td>@player.Email</td>
					<td>
						<a class="btn btn-primary btn-sm" href="/Players/Update?id=@player.Id">Edit</a>
						<a class="btn btn-primary btn-sm" href="#">Delete</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>